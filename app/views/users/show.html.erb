<main class="flex flex-col items-center w-full my-12">
  <div class="w-1/2">
    <%= button_to :back, class: "w-fit mb-4 cursor-pointer flex gap-2", method: :get do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
      </svg>
      Back
    <% end %>
    <div class="bg-white rounded-lg shadow border-gray-200 border px-6 py-8">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          User Profile
        </h1>
        <div class="w-full flex flex-col gap-4">
          <div class="w-full flex flex-col">
            <span class="block mb-2 text-sm font-medium text-gray-900">Name</span>
            <span class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg p-2.5"><%= @user.name %></span>
          </div>
          <div class="w-full flex flex-col">
            <span class="block mb-2 text-sm font-medium text-gray-900">Last Name</span>
            <span class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg p-2.5"><%= @user.last_name %></span>
          </div>
          <div class="w-full flex flex-col">
            <span class="block mb-2 text-sm font-medium text-gray-900">Email</span>
            <span class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg p-2.5"><%= @user.email %></span>
          </div>
        </div>
        <% if @user == current_user %>
          <div class="actions mt-4">
            <%= link_to "Edit Profile", edit_user_registration_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-fit cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="flex flex-col items-center mt-8">
      <h2 class="text-2xl font-bold leading-tight tracking-tight w-full text-gray-900 md:text-3xl mb-4">
        User Posts
      </h2>
      <% @user_posts.each do |blog_post| %>
        <div class="bg-white rounded-lg shadow border-gray-200 border w-full px-6 py-4 mb-4">
          <h3 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
            <%= link_to blog_post.title, blog_post_path(blog_post), class: "text-blue-500 hover:text-blue-700" %>
          </h3>
          <p class="text-gray-700 mt-2 line-clamp-2">
            <%= blog_post.body %>
          </p>
          <div class="text-sm text-gray-600 mt-2">
            <%= blog_post.created_at.strftime("%d %B %Y %H:%M") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>