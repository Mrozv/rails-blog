<div class="comments-container space-y-4">
  <% sorted_comments = @comments.sort.reverse %>
  <% sorted_comments.each do |comment| %>
    <article class="comment border border-gray-300 p-4 rounded-lg flex justify-between">
      <div>
        <div class="flex items-center gap-4 mb-2">
          <%= link_to comment.user.full_name, user_path(comment.user), class: "text-blue-500 hover:text-blue-700" %>
          <small class="block text-gray-600"><%= comment.created_at.strftime("%d %B %Y %H:%M") %></small>
        </div>
        <p class="text-gray-800"><%= comment.content %></p>
      </div>
      <% if comment.user == current_user %>
        <%= button_to 'Delete', blog_post_comment_path(comment.blog_post, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 bg-transparent hover:text-red-700 cursor-pointer' %>
      <% end %>
    </article>
  <% end %>
</div>