<div class="comment-form mt-6">
  <%= form_with(model: [ blog_post, blog_post.comments.build ], local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :content, class: "block text-gray-700" %>
      <%= form.text_area :content, class: "w-full h-24 p-2 border border-gray-300 rounded-lg" %>
    </div>
    <div>
      <%= form.submit "Add Comment", class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>